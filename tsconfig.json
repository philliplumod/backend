{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true, // Enable strict null checks
    "noImplicitAny": true,    // Enable no implicit any
    "strictBindCallApply": true, // Enable strict bind call apply
    "strictFunctionTypes": true, // Enable strict function types
    "strictPropertyInitialization": true, // Enable strict property initialization
    "forceConsistentCasingInFileNames": true, // Enable consistent casing in file names
    "noFallthroughCasesInSwitch": true // Enable fallthrough checks in switch statements
  }
}
